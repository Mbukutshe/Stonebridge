<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comments_item_layout"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent">
    <FrameLayout
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:background="@drawable/profile_background"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/adminprofile" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/chat_message_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <FrameLayout
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/clarity_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="Hw u doing?"
                android:textColor="@color/menuColor"
                android:ellipsize="end" />
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:20"
                android:textStyle="bold"
                android:textColor="#bcbcbc"
                android:layout_gravity="right"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>