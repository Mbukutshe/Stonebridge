<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/upload_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/upload_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_choose"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/layout_features_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_image"
                    android:layout_gravity="top|center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:borderWidth="20dp"
                    app:elevation="5dp"
                    app:backgroundTint="#EAEAEA"
                    app:srcCompat="@drawable/images"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_vertical|center_horizontal"
                    android:paddingTop="20dp"
                    android:textColor="@color/menuColor"
                    android:text="Gallery"/>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_camera"
                    android:layout_gravity="top|center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:borderWidth="20dp"
                    app:elevation="5dp"
                    app:backgroundTint="#EAEAEA"
                    app:srcCompat="@drawable/camera"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_vertical|center_horizontal"
                    android:paddingTop="20dp"
                    android:textColor="@color/menuColor"
                    android:text="Camera"/>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_video"
                    android:layout_width="wrap_content"
                    android:layout_gravity="top|center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:borderWidth="20dp"
                    app:elevation="5dp"
                    app:backgroundTint="#EAEAEA"
                    app:srcCompat="@drawable/videos"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom|center_vertical|center_horizontal"
                    android:textColor="@color/menuColor"
                    android:text="Video"/>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/layout_caption"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#000"
            android:layout_gravity="bottom">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@android:color/transparent"
                    android:id="@+id/title_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Add Caption..."
                    android:layout_gravity="bottom"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fab_send"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:borderWidth="0dp"
                app:elevation="5dp"
                app:backgroundTint="#EAEAEA"
                app:srcCompat="@drawable/sending"
                />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>