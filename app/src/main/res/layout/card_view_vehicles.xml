<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_videos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPaddingLeft="0dp"
    card_view:contentPaddingRight="0dp"
    card_view:contentPaddingTop="0dp"
    card_view:contentPaddingBottom="0dp"
    card_view:theme="@style/AlertDialog.AppCompat">
    <LinearLayout
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/message_layout_message"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@color/greyish_color"/>
                <wiseman.stonebridge.Views.Triangle
                    android:id="@+id/video_footer_layout"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_gravity="top|end"
                    android:gravity="top|end"
                    android:background="@android:color/transparent"
                    android:layout_height="200dp">
                    <FrameLayout
                        android:id="@+id/video_duration_layout"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:background="@drawable/questions"/>
                        <TextView
                            android:id="@+id/video_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:text="@string/ask"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/price_duration"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="end"
                            android:textSize="15sp"
                            android:textColor="#fff"/>
                    </FrameLayout>
                </wiseman.stonebridge.Views.Triangle>
                <LinearLayout
                    android:id="@+id/title_message"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/styles_gradient"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                 android:visibility="gone"
                                android:id="@+id/more"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="top|end"
                                android:layout_weight="0"
                                android:background="@drawable/more"/>
                            <TextView
                                android:id="@+id/subject_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top|left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_alignParentLeft="true"
                                android:text=""
                                android:layout_weight="2"
                                android:textSize="10pt"
                                android:textAppearance="@style/Subject"
                                />
                            <TextView
                                android:id="@+id/message_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=""
                                android:textColor="@color/white_color"
                                android:textSize="7pt"
                                android:maxLines="2"
                                android:ellipsize="end"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EAEAEA">
        </LinearLayout>

        <FrameLayout
            android:id="@+id/author_layout_message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout_message">
            <TextView
                android:id="@+id/urgent_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/info_text_message"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/messageid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/urgent_text"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>